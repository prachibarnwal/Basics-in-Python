while True:
    if len(names) == 0:
        print("GAME OVER. ALL PLAYERS GOT THEIR TURN.")
        break
    time.sleep(2)
    n = rd.choice(names)
    print("PLAYER selected is ", n)
    time.sleep(1)
    names.remove(n)
    ch = int(input("PRESS 1 for TRUTH & PRESS 2 for DARE :) : "))
    if ch == 1:
        print("^"*40)
        print(n+",you selected TRUTH")
        print("Your question is ")
        print(rd.choice(truth))
