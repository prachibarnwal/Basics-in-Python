n = int(input("enter the rows of kaajoo-katli : "))
for a in range(n,0,-1):
    for b in range(a):
        print("*",end = ' ')
    for  s in range(2*(n-a)):
        print(" ",end = ' ')
    for b in range(a):
        print("*",end = ' ')
    print()
for a in range(1, n + 1):
    for b in range(a):
        print("*",end = ' ')
    for  s in range(2*(n-a)):
        print(" ",end = ' ')
    for b in range(a):
        print("*",end = ' ')
    print()

