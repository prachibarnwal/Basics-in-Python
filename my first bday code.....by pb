import turtle as t
import random as r
import time
import pygame
from pygame import mixer
import math as m


#SONG PLAYING
mixer.init()
mixer.music.load("prachi.mp3")
mixer.music.set_volume(100.5) 
mixer.music.play()

        
#SCREEN SET-UP
ck = t.Screen()
ck.title("MANY MANY HAPPIE RETURNS OF THIS SPECIAL DAY TO YOU....by your chirping bird :)")
ck.setup(650,650)
ck.bgcolor("#fef5d7")
#PEN SET-UP
s = t.Turtle()
s.speed(5)
#cake
s.up()
s.goto(200,-200)
s.down()
#1st pond
s.begin_fill()
s.color("#cbd9f9")
