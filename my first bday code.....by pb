#sprinklers code
color = ["#e28cb9", "#805a8c", "#eaa989", "#6e90b7", "#b8b68f", "#e174b5", "#cf737c", "#7c8782"]
for i in range(60):
    s.pu()
    x = r.randint(-300, 300)
    y = r.randint(-225, 230)
    s.goto(x, y)
    s.pd()
    s.dot(r.randint(2, 5), color[r.randint(0, 7)])

#font
s.goto(-283,-280)
s.write("Happy Birthday ANJALI MA'AM", font=("Black Chancery ", 40))
#font color change
for a in range(2):
    for i in 'red','green','orange',"magenta","black","Crimson","LightPink","HotPink","DeepPink","Coral","Tomato","Gold","DarkKhaki","Lavender","Fuchsia","DarkOrchid","DarkMagenta","Indigo","GreenYellow","lime green",'pink','yellow','deep pink','orange red':
        time.sleep(0.5)
        s.hideturtle()
        s.clear()
        s.color(i)
        s.up()
        s.goto(-283,-280)
        s.down()
        s.write("Happy BDay AL MA'AM", font=("Black Chancery ", 40))
